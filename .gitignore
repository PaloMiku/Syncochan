# Syncochan .gitignore

# 敏感配置和数据
backend/data/db_config.php
backend/data/*.db
backend/data/*.sqlite
backend/data/*.log
backend/data/sessions/*
!backend/data/sessions/.gitkeep

# 内容和备份目录
content/*
!content/.gitkeep
backups/*
!backups/.gitkeep

# 临时文件
*.tmp
*.temp
*.bak
*.backup
*.old
*.save
*.swp
*~

# 系统文件
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

# IDE 和编辑器
.vscode/
.idea/
*.sublime-project
*.sublime-workspace
*.code-workspace

# 依赖（如果使用 Composer）
vendor/
composer.phar
composer.lock

# 日志文件
*.log
logs/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# 环境配置
.env
.env.local
.env.*.local

# 打包文件
*.zip
*.tar
*.tar.gz
*.rar
*.7z

# PHP
.phpunit.result.cache
phpunit.xml

# 测试覆盖率
coverage/
.nyc_output/

# 临时上传目录
uploads/tmp/

# 缓存
cache/
*.cache

# 构建输出
dist/
build/
